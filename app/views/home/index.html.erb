<% content_for(:head) do %>
  <%= javascript_pack_tag 'app', 'data-turbolinks-track': 'reload', nonce: true %>
<% end %>
<% unless current_user %>
  <div
    class="bg-white flex flex-col h-screen justify-center items-center text-center">
    <div class="shadow-md question-card rounded px-8 pt-6 pb-8 mb-4">
      <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, class:"text-white" %>
    </div>
  </div>
<% else %>
  <% presenter = Home::IndexPresenter.new(self) %>
  <div id="app-root"
       data-props="<%= presenter.react_props.to_json %>">
  </div>
  <div class="mt-2 text-center w-full">
    <%= link_to "Logout", destroy_user_session_path, method: :delete %>
  </div>
<% end %>



